@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Personal info";
    Layout = null;
}

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/Account/personal info/personal info.css" />
    <title>Login and security</title>
</head>
<body>
    <div style="min-height: 100vh;  display: flex; flex-direction: column;">
        <!-- Start Nav -->
        <nav class="navbar navbar-expand-lg bg-white sticky-top  ">
            <!-- Start div tha t contain the items in nav -->
            <div class="container-lg   d-flex flex-row justify-content-between ">
                <!-- Start Logo -->
                <div class="d-flex align-items-center desktop">
                    <img src="~/Account/personal info//SVG/logo.svg">
                </div>
                <!-- End Logo -->
                <!-- Start Search -->
                <div class="d-flex align-items-center desktop">
                    <div class="container-fluid ">

                        <div href="#"
                             class="bg-white  d-flex align-items-center justify-content-between rounded-pill navigation_btn">
                            <div>Any where |</div>
                            <div>Any Week |</div>
                            <div>Add Guest </div>
                            <div>
                                <img src="~/Account/personal info//SVG/Frame 2.svg" alt="search" />
                            </div>
                        </div>

                    </div>
                    <div d-flex>
                        <img src="~/Account/personal info//SVG/Filter.svg" alt="filter" style="margin-top: 22px;" />
                    </div>

                </div>
                <!-- End Search -->
                <!-- Start Search for small screens -->
                <div class=" mobile ">
                    <div class="container-fluid ">
                        <div href="#"
                             class="bg-white  d-flex align-items-center  rounded-pill  justify-content-end navigation_btn_mobile">
                            <div class="text-end">
                                <img src="~/Account/personal info//SVG/Frame 2.svg" alt="search" />
                            </div>
                        </div>

                    </div>
                    <div class="small-mobile">
                        <img src="~/Account/personal info//SVG/Filter.svg" alt="filter" style="margin-top: 22px;" />
                    </div>

                </div>
                <!-- Start person -->
                <div class="small-mobile">
                    <div class="d-flex justify-content-between align-items-center right_section_nav ">
                        <span>Airbnb Your Home</span>
                        <div>
                            <img src="~/Account/personal info//SVG/middle.svg">
                        </div>
                    </div>

                    <!-- End person -->
                </div>
            </div>
            <!-- End div tha t contain the items in nav -->
        </nav>
        <!-- End Nav -->
        <div class="container-lg">
            <div>
                <h6><a asp-area="Identity" asp-page="/Account/Manage/Account settings" class="text-black text-decoration-none">Account</a> > Login and security</h6>
            </div>
            <div>
                <h1>Login and Security</h1>
            </div>
            <br>
            <br>
            <partial name="_StatusMessage" for="StatusMessage" />
            <div style="max-width: 612px;">
                <form id="profile-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>


                    <!-- Password -->
                    <div class="d-flex justify-content-between border-bottom">
                        <div>
                            <h6 class="bigdata">Password</h6>

                            <br>
                        </div>
                        <div>
                            <a href="#" class="text-black" data-bs-toggle="modal" data-bs-target="#pass">Edit</a>
                            <!-- Modal -->
                            <div class="modal fade" id="pass" data-bs-backdrop="static" data-bs-keyboard="false"
                                 tabindex="-1" aria-labelledby="pass" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="pass">
                                                Change your Password
                                            </h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                    aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                            <div class="form-floating mb-3">
                                                <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Please enter your old password." />
                                                <label asp-for="Input.OldPassword" class="form-label"></label>
                                                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                                            </div>
                                            <div class="form-floating mb-3">
                                                <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Please enter your new password." />
                                                <label asp-for="Input.NewPassword" class="form-label"></label>
                                                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                                            </div>
                                            <div class="form-floating mb-3">
                                                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Please confirm your new password." />
                                                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                    data-bs-dismiss="modal">
                                                Close
                                            </button>
                                            <button type="submit" id="update-profile-button" class="btn btn-primary">Save</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <br />



                </form>
            </div>
        </div>

        <footer class="bg-white border-top py-3  " style="margin-top: auto;">
            <div class="container-lg ">
                <div class="row d-flex height-footer">
                    <div class="   d-flex  col-lg-6 main-footer  ">
                        <ul class="list-inline d-flex justify-content-start ">
                            <li class=" d-flex ">&copy;2023 Airbnb, Inc.<span class="footer-point">.</span></li>
                            <li class=" d-flex ">
                                <a href="#" class="text-decoration-none text-black">Privacy</a><span class="footer-point">.</span>
                            </li>
                            <li class="d-flex ">
                                <a href="#" class="text-decoration-none text-black">Terms</a><span class="footer-point">.</span>
                            </li>
                            <li class="d-flex ">
                                <a href="#" class="text-decoration-none text-black">Sitemap</a><span class="footer-point">.</span>
                            </li>
                            <li class="d-flex ">
                                <a href="#" class="text-decoration-none text-black">
                                    Company
                                    details
                                </a><span class="footer-point">.</span>
                            </li>
                            <li class=" d-flex ">
                                <a href="#" class="text-decoration-none text-black">Destinations</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-6 d-flex justify-content-end desktop col-md-auto ">
                        <ul class="list-inline d-flex">
                            <li class="d-flex  ">
                                <a href="#"
                                   class="d-flex align-items-center text-decoration-none text-black">
                                    <img src="~/Account/personal info/SVG/globe.svg">English (IN)
                                </a><span class="footer-point"></span>
                            </li>
                            <li class="d-flex  ">
                                <a href="#"
                                   class="d-flex align-items-center text-decoration-none text-black">INR</a><span class="footer-point"></span>
                            </li>
                            <li class="d-flex  ">
                                <a href="#"
                                   class="d-flex align-items-center text-decoration-none text-black">
                                    Support&
                                    resources <img src="~/Account/personal info/SVG/Group.svg">
                                </a>
                            </li>

                        </ul>
                    </div>
                </div>

        </footer>
    </div>
    <!-- End footer -->


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />

</body>





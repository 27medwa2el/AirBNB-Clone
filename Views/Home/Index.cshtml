@model IEnumerable<Property>
@{
    ViewData ["Title"] = "Home Page";
    int counter = 0;
    Layout = null;
}
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/Homepage/styles.css" />
    <script src="https://kit.fontawesome.com/5b61638241.js" crossorigin="anonymous"></script>
    <title>Home Page</title>
</head>

<body>
    <div style="min-height: 100vh; display: flex; flex-direction: column">
        <!-- Start Nav -->
        <nav class="navbar navbar-expand-lg bg-white sticky-top">
            <!-- Start div tha t contain the items in nav -->
            <div class="container-lg d-flex flex-row justify-content-between">
                <!-- Start Logo -->
                <a asp-action="Index" asp-controller="Home" class="d-flex align-items-center desktop navbar-brand">
                    <img src="./Services/SVG/logo.svg">
                </a>

                <!-- End Logo -->
                <!-- Start Search -->
                <div class="d-flex align-items-center desktop">
                    <div class="container-fluid">
                        <a href="#"
                           class="bg-white d-flex align-items-center justify-content-between rounded-pill navigation_btn navbar-brand">
                            <div>Any where |</div>
                            <div>Any Week |</div>
                            <div>Add Guest</div>
                            <div>
                                <img src="./Services/SVG/Frame 2.svg" alt="search" />
                            </div>
                        </a>
                        <!-- Start Filter -->
                    </div>
                    <a href="#" d-flex>
                        <img src="./Services/SVG/Filter.svg"
                             alt="filter"
                             style="margin-top: 22px" />
                    </a>
                </div>
                <!-- End Filter -->
                <!-- End Search -->
                <!-- Start Search for small screens -->
                <div class="mobile">
                    <div class="container-fluid">
                        <div href="#"
                             class="bg-white d-flex align-items-center rounded-pill justify-content-end navigation_btn_mobile">
                            <div class="text-end">
                                <img src="./Services/SVG/Frame 2.svg" alt="search" />
                            </div>
                        </div>
                    </div>
                    <div class="small-mobile">
                        <img src="./Services/SVG/Filter.svg"
                             alt="filter"
                             style="margin-top: 22px" />
                    </div>

                </div>
                <!-- Start person -->
                <div class="small-mobile">
                    <div class="d-flex justify-content-between align-items-center right_section_nav ">
                        <span>
                            <a href="#" class="navbar-brand w-25">Airbnb Your Home</a>
                        </span>
                        <div class="dropdown">
                            <a href="#"
                               id="dropdownMenuLink"
                               data-bs-toggle="dropdown"
                               aria-expanded="false">
                                <img src="./Services/SVG/middle.svg" />
                            </a>
                            
                            <ul class="dropdown-menu dropdown-menu-end rounded" aria-labelledby="dropdownMenuLink " style="width: 1rem;">
                                @if (User.Identity.IsAuthenticated)
                                    {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" href="Identity/Account/Manage">Profile</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-controller="Listing" asp-action="Index">Become A Host </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-controller="Hosting" asp-action="Index">Hosting</a>
                                    </li>
                                    <li class="nav-item">
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item  smallTxt" href="https://www.airbnb.com/help?audience=guest">Help</a>
                                    </li>
                                    <li class="nav-item">
                                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                            <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                                        </form>
                                    </li>
                                    }
                                else
                                    {
                                    <li><a class="dropdown-item  fw-semibold smallTxt" asp-area="Identity" asp-page="/Account/Login">Log in</a></li>
                                    <li><a class="dropdown-item  smallTxt" asp-area="Identity" asp-page="/Account/Register">Sign Up</a></li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li><a class="dropdown-item  smallTxt" href="">Airbnb your home</a></li>
                                    <li><a class="dropdown-item  smallTxt" href="https://www.airbnb.com/help?audience=guest">Help</a></li>
                                    }
                            </ul>
                        </div>
                    </div>

                    <!-- End person -->
                </div>
            </div>
            <!-- End div tha t contain the items in nav -->
        </nav>
        <!-- End Nav -->
        <!-- start page content -->
        <div class="container-lg">
            <!-- start Property cards -->
            <!-- 1st row -->
            <div class="mt-5">
                <div class="row">

                    @foreach (var prop in Model)
                        {

                        if (prop.Accepted)
                            {

                            counter++;
                            <div class="col-sm-6 col-lg-3 mb-4">
                                <a asp-action="PropertyDetails" asp-route-id="@prop.ID" ; class="text-decoration-none text-black">
                                    <div class="card">

                                        <div id="carouselExampleIndicator@(counter)" class="carousel slide" data-bs-interval="false">
                                            <div class="carousel-indicators">

                                                <button type="button"
                                                        data-bs-target="#carouselExampleIndicator@(counter)"
                                                        data-bs-slide-to="0"
                                                        class="active"
                                                        aria-current="true"
                                                        aria-label="Slide 1"></button>
                                                <button type="button"
                                                        data-bs-target="#carouselExampleIndicator@(counter)"
                                                        data-bs-slide-to="1"
                                                        aria-label="Slide 2"></button>
                                                <button type="button"
                                                        data-bs-target="#carouselExampleIndicator@(counter)"
                                                        data-bs-slide-to="2"
                                                        aria-label="Slide 3"></button>

                                                <button type="button"
                                                        data-bs-target="#carouselExampleIndicator@(counter)"
                                                        data-bs-slide-to="3"
                                                        aria-label="Slide 4"></button>
                                                <button type="button"
                                                        data-bs-target="#carouselExampleIndicator@(counter)"
                                                        data-bs-slide-to="4"
                                                        aria-label="Slide 5"></button>
                                            </div>

                                            <div class="carousel-inner">
                                                <div class="carousel-item active">
                                                    <img class="card-img-top mb-3 rounded w-100"
                                                         src="~/Prop.Image/Prop1/@prop.PropertyImages.First().URL"
                                                         alt="Property image" style="aspect-ratio:1/1;" />
                                                </div>
                                                @foreach (var img in prop.PropertyImages)
                                                    {
                                                    if (img.URL == prop.PropertyImages.First().URL) { continue; }
                                                    <div class="carousel-item">
                                                        <img class="card-img-top mb-3 rounded w-100"
                                                             src="~/Prop.Image/Prop1/@img.URL"
                                                             alt="Property image" style="aspect-ratio:1/1;" />
                                                    </div>
                                                    }
                                            </div>
                                            <button class="carousel-control-prev"
                                                    type="button"
                                                    data-bs-target="#carouselExampleIndicator@(counter)"
                                                    data-bs-slide="prev">
                                                <span class="carousel-control-prev-icon"
                                                      aria-hidden="true"></span>
                                                <span class="visually-hidden">Previous</span>
                                            </button>
                                            <button class="carousel-control-next"
                                                    type="button"
                                                    data-bs-target="#carouselExampleIndicator@(counter)"
                                                    data-bs-slide="next">
                                                <span class="carousel-control-next-icon"
                                                      aria-hidden="true"></span>
                                                <span class="visually-hidden">Next</span>
                                            </button>
                                        </div>
                                        <img class="fav-icon" src="./Services/SVG/fav.svg" />
                                        <div>
                                            <h5 class="card-title mb-0 d-flex">
                                                @prop.Region.Name , @prop.Region.City.Name
                                                <img class="ms-auto" src="./Services/SVG/star.svg" />
                                            </h5>
                                            <p class="card-text mb-0">@prop.Title</p>
                                            <p class="card-text mb-0">@prop.Date</p>
                                            <p class="card-text mb-0">@prop.Price</p>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            }
                        }

                </div>
            </div>



            <!-- end property cards -->
        </div>
        <!-- end page content -->
        <!-- Start footer -->
        <footer class="bg-white border-top py-3">
            <div class="container-lg">
                <div class="row d-flex height-footer">
                    <div class="d-flex col-lg-6 main-footer">
                        <ul class="list-inline d-flex justify-content-start">
                            <li class="d-flex">
                                &copy;2023 Airbnb, Inc.<span class="footer-point">.</span>
                            </li>
                            <li class="d-flex">
                                <a href="#" class="text-decoration-none text-black">Privacy</a><span class="footer-point">.</span>
                            </li>
                            <li class="d-flex">
                                <a href="#" class="text-decoration-none text-black">Terms</a><span class="footer-point">.</span>
                            </li>
                            <li class="d-flex">
                                <a href="#" class="text-decoration-none text-black">Sitemap</a><span class="footer-point">.</span>
                            </li>
                            <li class="d-flex">
                                <a href="#" class="text-decoration-none text-black">Company details</a><span class="footer-point">.</span>
                            </li>
                            <li class="d-flex">
                                <a href="#" class="text-decoration-none text-black">Destinations</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-6 d-flex justify-content-end desktop col-md-auto">
                        <ul class="list-inline d-flex">
                            <li class="d-flex">
                                <a href="#"
                                   class="d-flex align-items-center text-decoration-none text-black">INR</a><span class="footer-point"></span>
                            </li>
                            <li class="d-flex">
                                <a href="#"
                                   class="d-flex align-items-center text-decoration-none text-black">
                                    Support& resources <img src="./Services/SVG/Group.svg" />
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </footer>

        <!-- End footer -->
    </div>
    <script src="./script.js"></script>
</body>


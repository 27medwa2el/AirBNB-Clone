@model AirBNB.Controllers.reviewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/Review/styles.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://kit.fontawesome.com/5b61638241.js" crossorigin="anonymous"></script>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"></script>

    <title>airbnb</title>
</head>

<body>
    <!-- Start Nav -->
    <nav class="navbar navbar-expand-lg bg-white sticky-top  " style="height: 102px;">
        <!-- Start div that contain the items in nav -->
        <div class="container-lg   d-flex flex-row justify-content-between ">
            <!-- Start Logo -->
            <div class="d-flex align-items-center">
                <img src="~/Review/SVG/logo.svg">
            </div>
            <!-- End Logo -->
            <!-- Start Search -->
            <div class="d-flex align-items-center ">
                <div class="container-fluid ">

                    <div href="#" class="bg-white  d-flex align-items-center justify-content-between rounded-pill navigation_btn">

                        <div>Any where |</div>
                        <div>Any Week |</div>
                        <div>Add Guest </div>
                        <div>
                            <img src="~/Review/SVG/Frame 2.svg" alt="search" />
                        </div>
                    </div>
                    </a>
                </div>
                <div d-flex>
                    <img src="~/Review/SVG/Filter.svg" alt="filter" style="margin-top: 22px;" />
                </div>

            </div>
            <!-- End Search -->
            <!-- Start person -->

            <div class="d-flex justify-content-between align-items-center right_section_nav">
                <span>Airbnb Your Home</span>
                <div>
                    <img src="~/Review/SVG/Language.svg">
                </div>
                <div>
                    <img src="~/Review/SVG/middle.svg">
                </div>
            </div>

            <!-- End person -->
        </div>
        <!-- End div tha t contain the items in nav -->
    </nav>
    <!-- End Nav -->
    <!-- start page content -->

    <div class="container">
        <div class="modal-header mb-2">
            <h4 class="modal-title">Write a Review</h4>
        </div>
        <form method="post" asp-controller="Review" asp-action="AddReview">
            <div class="row pb-2 text-area">
                <div class="col-md-12">
                    <textarea asp-for="Content" class="form-control mb-3 mt-4" id="text" name="Content" maxlength="100" rows="6"></textarea>
                    <span class="text-black-50  fw-semibold" id="count_message"></span>
                </div>

            </div>
            <div class="row ">
                <div class="col-md-12 d-flex justify-content-center ">
                    <div class="stars">

                        <input class="star star-5" id="star-5" type="radio" name="star" value="5" />
                        <label class="star star-5" for="star-5"></label>

                        <input class="star star-4" id="star-4" type="radio" name="star" value="4" />
                        <label class="star star-4" for="star-4"></label>

                        <input class="star star-3" id="star-3" type="radio" name="star" value="3" />
                        <label class="star star-3" for="star-3"></label>

                        <input class="star star-2" id="star-2" type="radio" name="star" value="2" />
                        <label class="star star-2" for="star-2"></label>

                        <input class="star star-1" id="star-1" type="radio" name="star" value="1" />
                        <label class="star star-1" for="star-1"></label>

                        <!-- Hidden input field to store the selected star value -->
                        <input type="hidden" name="Rating" id="stars" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="Submit" class="btn btn-primary" onclick="setStarValue()">Confirm</button>
                    <button type="button" class="btn btn-bwm">Close</button>
                </div>
            </div>
        </form>

    </div>


    <!-- Start footer -->
    <footer class="footer bg-white border-top py-3 ">
        <div class="container-lg ">

            <div class="row d-flex  height-footer">
                <div class="   d-flex  col-lg-6 ">
                    <ul class="list-inline d-flex justify-content-start ">
                        <li class=" d-flex ">&copy;2023 Airbnb, Inc.<span class="footer-point">.</span></li>
                        <li class=" d-flex ">
                            <a href="#" class="text-decoration-none text-black">Privacy</a><span class="footer-point">.</span>
                        </li>
                        <li class="d-flex ">
                            <a href="#" class="text-decoration-none text-black">Terms</a><span class="footer-point">.</span>
                        </li>
                        <li class="d-flex ">
                            <a href="#" class="text-decoration-none text-black">Sitemap</a><span class="footer-point">.</span>
                        </li>
                        <li class="d-flex ">
                            <a href="#" class="text-decoration-none text-black">Company details</a><span class="footer-point">.</span>
                        </li>
                        <li class=" d-flex "><a href="#" class="text-decoration-none text-black">Destinations</a></li>

                    </ul>
                </div>
                <div class="col-lg-6 d-flex justify-content-end">
                    <ul class="list-inline d-flex">
                        <li class="d-flex  ">
                            <a href="#" class="d-flex align-items-center text-decoration-none text-black">
                                <img src="~/Review/SVG/globe.svg">English (IN)
                            </a><span class="footer-point"></span>
                        </li>
                        <li class="d-flex  ">
                            <a href="#"
                               class="d-flex align-items-center text-decoration-none text-black">INR</a><span class="footer-point"></span>
                        </li>
                        <li class="d-flex  ">
                            <a href="#" class="d-flex align-items-center text-decoration-none text-black">
                                Support&
                                resources <img src="~/Review/SVG/Group.svg">
                            </a>
                        </li>

                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <!-- End footer -->
    <script src="~/Review/js.js"></script>
</body>

</html>